<%= form_for(@url) do |f| %>
  <% if @url.errors.any? %>
    <div id="error_explanation" class='alert alert-danger'>
      <h2><%= pluralize(@url.errors.count, "error") %> prohibited this url from being saved:</h2>
      <ul>
      <% @url.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :long, class: 'control-label' %>
        <%= f.text_field :long, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.submit 'Shorten URL', class: 'btn btn-primary btn-block'%>
    </div>
  </div>
<% end %>
